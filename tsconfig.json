{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "declarationDir": "./",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
